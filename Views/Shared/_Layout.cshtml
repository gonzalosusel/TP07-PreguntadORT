<!DOCTYPE html>
<html lang="es" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Respondidos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TP_PreguntadORT.styles.css" asp-append-version="true" />
    <!-- Popups (Sweet Alert) -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Principal</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="ConfigurarJuego">Nueva partida</a>
                        </li>

                        @if(!ViewBag.DatosUsuario.Item3){
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="IniciarSesion">Iniciar sesión</a>
                            </li>
                        } else {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="MostrarPuntos">Mis puntos acumulados</a>
                            </li>
                        }

                        @if(ViewBag.DatosUsuario.Item2){
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="AñadirPregunta">Añadir pregunta</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="HighScores">Tabla de puntajes</a>
                        </li>
                    </ul>

                    @if(ViewBag.DatosUsuario.Item3){
                        <p>Iniciaste sesión como: @ViewBag.DatosUsuario.Item1</p>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2024 - TP_PreguntadORT
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        for (let i = 0; i < 10; i++) {
            let signoPregunta = document.createElement('div');
            signoPregunta.className = "SignosPregunta";
            signoPregunta.style.animationDelay = `${Math.random() * 5}s`;
            signoPregunta.style.left = Math.random() * window.innerWidth + "px";
            signoPregunta.innerText = "?";
            
            document.body.appendChild(signoPregunta);
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
