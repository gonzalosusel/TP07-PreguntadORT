@{
    ViewData["title"] = "Iniciar sesión";
}

<div>
    <form method="POST" action='@Url.Action("AñadirPregunta", "Home")'>
        <div class="form-group">
            <input required="required" class="form-control" type="text" name="Username" placeholder="Nombre de usuario"><br>
        </div>

        <div class="form-group">
            <input required="required" class="form-control" type="password" name="Password" placeholder="Contraseña"><br>
        </div>

        <!-- IdCategoria, IdDificultad;
    public string Enunciado, Foto;-->

        <div class="form-group">
            <select class="form-control" required="required" name="IdDificultad">
                @foreach(Dificultad dificultad in ViewBag.Dificultades){
                    <option value="@dificultad.IdDificultad">@dificultad.Nombre</option>
                }
            </select><br>
        </div>

        <div class="form-group">
            <select class="form-control" required="required" name="IdCategoria">
                @foreach(Categoria categoria in ViewBag.Categorias){
                    <option value="@categoria.IdCategoria">@categoria.Nombre</option>
                }
            </select><br>
        </div>

        <div class="form-group">
            <input required="required" class="form-control" type="text" name="PrFoto" placeholder="Foto"><br>
        </div>

        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
</div>