@{
    ViewData["title"] = "Configurar juego";
}

<div class="text-center">
    <form method="GET" action='@Url.Action("Comenzar", "Home")'>
        <input required="required" type="text" name="Username" placeholder="Nombre de usuario">
        <select required="required" name="IdDificultad">
            <option value="-1">Todas</option>
            @foreach(Dificultad dificultad in ViewBag.Dificultades){
                <option value="@dificultad.IdDificultad">@dificultad.Nombre</option>
            }
        </select>
        <select required="required" name="IdCategoria">
            <option value="-1">Todas</option>
            @foreach(Categoria categoria in ViewBag.Categorias){
                <option value="@categoria.IdCategoria">@categoria.Nombre</option>
            }
        </select>
        <button>Enviar</button>
    </form>
</div>